		<class>com.gb1.healthcheck.domain.nutrition.SimpleFood</class>
		<class>com.gb1.healthcheck.domain.nutrition.ComplexFood</class>
		<class>com.gb1.healthcheck.domain.users.User</class>
	</persistence-unit>

</persistence>
