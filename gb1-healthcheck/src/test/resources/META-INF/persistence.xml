	version="1.0">

	<persistence-unit name="mainPersistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- Entities must be declared in this context, not sure why. -->
