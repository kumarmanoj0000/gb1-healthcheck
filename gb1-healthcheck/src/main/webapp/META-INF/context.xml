<?xml version="1.0"?>

<Context reloadable="true" crossContext="false" path="/healthcheck">
	<Resource name="jdbc/MainDataSource" auth="Container" type="javax.sql.DataSource"
		driverClassName="com.mysql.jdbc.Driver" url="jdbc:mysql://localhost:3306/healthcheck"
		username="healthcheck" password="healthcheck" maxActive="20" maxIdle="10" maxWait="-1" />
	<Resource name="mail/MainSession" auth="Container" type="javax.mail.Session"
		mail.smtp.host="localhost" />
</Context>
