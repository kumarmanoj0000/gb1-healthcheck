<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<validator type="expression">
		<param name="expression">model.password1.equals(model.password2)</param>
		<message>Both passwords must match.</message>
	</validator>

	<field name="model.login">
		<field-validator type="requiredstring">
			<message>Login is required.</message>
		</field-validator>
	</field>
	<field name="model.email">
		<field-validator type="requiredstring">
			<message>Valid email is required.</message>
		</field-validator>
		<field-validator type="email">
			<message>Valid email is required.</message>
		</field-validator>
	</field>
	<field name="model.password1">
		<field-validator type="requiredstring">
			<message>Password is required.</message>
		</field-validator>
	</field>
	<field name="model.password2">
		<field-validator type="requiredstring">
			<message>Password confirmation is required.</message>
		</field-validator>
	</field>
</validators>
