<assembly>
  <id>source-with-dependencies</id>

  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>

    <!-- include information text files -->
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>

    <!-- include source code but not dev libraries -->
    <fileSet>
      <directory>src</directory>
      <excludes>
        <exclude>*.jar</exclude>
      </excludes>
    </fileSet>

    <!-- include documentation -->
    <fileSet>
      <directory>target/javadoc</directory>
      <outputDirectory>docs</outputDirectory>
    </fileSet>

    <!-- include WAR file -->
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>
  </fileSets>

  <!-- include dependent JARs -->
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>

</assembly>
